<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".RepCycleTimerActivity">

    <me.grantland.widget.AutofitTextView
        android:id="@+id/name_display_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:minTextSize="16sp"
        android:textSize="100sp"
        android:autoSizeMaxTextSize="40sp"
        android:maxLines="1"
        android:paddingEnd="25dp"
        android:paddingStart="25dp"
        android:textAlignment="center"
        android:gravity="center_vertical"
        android:layout_weight="0"
        android:textColor="@color/black"
        tools:text="TextView" />

    <me.grantland.widget.AutofitTextView
        android:id="@+id/timer_display_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:fontFamily="@font/bevan"
        android:gravity="center"
        android:textStyle="bold|italic"
        android:maxLines="1"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:textAlignment="center"
        android:textColor="@color/colorAccent"
        android:textSize="1000sp"
        app:minTextSize="16sp"
        tools:text="TextView" />

    <me.grantland.widget.AutofitTextView
        android:id="@+id/repetition_display_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:textSize="20sp"
        app:minTextSize="16dp"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:layout_weight="1"
        tools:text="TextView" />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cycle_display_hsv">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:id="@+id/cycle_display_ll"
            android:paddingBottom="20dp" />

    </HorizontalScrollView>

</LinearLayout>